{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "types": ["svelte", "node"],
        "baseUrl": "./src",
        "inlineSources": true,
        "sourceMap": true,
        "module": "ESNext",
        "target": "ES6",
        "esModuleInterop": false,
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "verbatimModuleSyntax": false,
        "lib": ["DOM", "ES5", "ES6", "ES7", "webworker"]
    },
    "include": ["**/*.ts"]
}
